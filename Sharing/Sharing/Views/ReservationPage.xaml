<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Sharing.Views"
             xmlns:vm="clr-namespace:Sharing.ViewModels"
             x:Class="Sharing.Views.ReservationPage">
    <ContentPage.BindingContext>
        <vm:ReservationViewModel />
    </ContentPage.BindingContext>

    <StackLayout>
        <!-- Dodaj pola do wyboru godziny i wprowadzenia ceny rezerwacji -->
        <DatePicker Date="{Binding SelectedReservationTime}" />
        <Entry Placeholder="Reservation Price" Keyboard="Numeric" Text="{Binding ReservationPrice}" />

        <Button Text="Reserve" Command="{Binding ReserveCommand}" />
    </StackLayout>
</ContentPage>
