<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sharing.Views.SearchChargingPointsPage">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Szukaj w Okolicy" Command="{Binding SearchChargingPointsCommand}" IsEnabled="{Binding IsNotBusy}" />
            <!-- Mapa lub lista dostępnych ładowarek -->
            <Button Text="Wróć" Command="{Binding GoBackCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>